{
  "name": "cores-fragrancias-desktop",
  "version": "1.0.0",
  "description": "Desktop wrapper for Streamlit app - cores e frangr\u00e2ncias by berenice",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "app": "python -m streamlit run ../app.py",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Generated",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "br.com.coresfragrancias.desktop",
    "productName": "CoresFragrancias",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "../**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "../assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "../assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "../assets/icon.png"
    }
  }
}